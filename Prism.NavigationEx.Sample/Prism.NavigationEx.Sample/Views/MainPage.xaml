<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Prism.NavigationEx.Sample.Views.MainPage" 
             Title="Main Page">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="8">
        <Label Text="{Binding Text.Value}" HorizontalOptions="Center"/>
        <Button Text="Go to Second Page" Command="{Binding GoToSecondPpageCommand}" HorizontalOptions="Center"/>
        <Button Text="Deep Link" Command="{Binding DeepLinkCommand}" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>